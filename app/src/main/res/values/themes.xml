<resources>
    <style name="Theme.Coding" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ListRecycleView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="ListItemOddLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/ListItemOddPaddingLeft</item>
        <item name="android:paddingTop">@dimen/ListItemOddPaddingTop</item>
        <item name="android:paddingRight">@dimen/ListItemOddPaddingRight</item>
        <item name="android:paddingBottom">@dimen/ListItemOddPaddingBottom</item>
        <item name="android:background">@color/list_item_background_odd</item>
    </style>

    <style name="ListItemOddSchoolName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ListItemOddSchoolNameTextSize</item>
        <item name="android:textColor">@color/list_item_school_name</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemOddParagraph">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ListItemOddParagraphTextSize</item>
        <item name="android:textColor">@color/list_item_overview_paragraph</item>
    </style>

    <style name="ListItemOddLocation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
