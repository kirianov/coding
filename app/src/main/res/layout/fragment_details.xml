<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/DetailsItemLayout"
    tools:ignore="MissingConstraints,Autofill,LabelFor">

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/error"
        style="@style/DetailsItemError"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/schoolName"
        style="@style/DetailsItemSchoolName"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/overviewParagraph"
        style="@style/DetailsItemOverviewParagraph"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/schoolName"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/satMathLabel"
        android:text="@string/details_sat_math"
        style="@style/DetailsItemSatMath"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/overviewParagraph" />
    <TextView
        android:id="@+id/satMath"
        style="@style/DetailsItemSatMath"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/satMathLabel"
        app:layout_constraintTop_toTopOf="@id/satMathLabel" />

    <TextView
        android:id="@+id/satReadingLabel"
        android:text="@string/details_sat_reading"
        style="@style/DetailsItemSatReading"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/satMathLabel" />
    <TextView
        android:id="@+id/satReading"
        style="@style/DetailsItemSatReading"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/satReadingLabel"
        app:layout_constraintTop_toTopOf="@id/satReadingLabel" />

    <TextView
        android:id="@+id/satWritingLabel"
        android:text="@string/details_sat_writing"
        style="@style/DetailsItemSatWriting"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/satReadingLabel" />
    <TextView
        android:id="@+id/satWriting"
        style="@style/DetailsItemSatWriting"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/satWritingLabel"
        app:layout_constraintTop_toTopOf="@id/satWritingLabel" />

    <TextView
        android:id="@+id/satTakersLabel"
        android:text="@string/details_sat_count"
        style="@style/DetailsItemSatTakers"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/satWritingLabel" />
    <TextView
        android:id="@+id/satTakers"
        style="@style/DetailsItemSatTakers"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/satTakersLabel"
        app:layout_constraintTop_toTopOf="@id/satTakersLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>
